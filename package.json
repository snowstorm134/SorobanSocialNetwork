{
  "name": "social-network-contract",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "setup": "npm run clean && ./initialize.sh ${NETWORK:-futurenet} && npm run build-contracts && npm install",
    "clean": "rm -rf .next .soroban .soroban-example-dapp",
    "reset": "npm run clean && npm run setup",
    "build-contracts": "soroban contract bindings typescript --wasm ./target/wasm32-unknown-unknown/release/soroban_social_network_contract.wasm --id $(cat ./.soroban-example-dapp/social_network_contract_id) --rpc-url $(cat ./.soroban-example-dapp/rpc-url) --network-passphrase \"$(cat ./.soroban-example-dapp/passphrase)\" --output-dir ./.soroban/social-network-contract --contract-name social-network-contract"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.0",
    "@chakra-ui/react": "^2.8.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@stellar/freighter-api": "^1.5.1",
    "@tabler/icons-react": "^2.32.0",
    "@thirdweb-dev/react": "^3.14.37",
    "social-contract": "file:.soroban/social-network-contract",
    "bigint-conversion": "^2.4.1",
    "react": "^18.2.0",
    "framer-motion": "^10.16.1",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-hook-form": "^7.45.4",
    "react-router-dom": "^6.15.0",
    "soroban-client": "^0.9.2",
    "zustand": "^4.4.1",
    "axios": "^0.27.2",
    "humanize-duration": "^3.27.3",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
